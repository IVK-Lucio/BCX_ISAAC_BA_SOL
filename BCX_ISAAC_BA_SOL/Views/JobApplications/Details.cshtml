@model BCX_ISAAC_BA_SOL.Models.JobApplication

@{
    ViewBag.Title = "Details";
}


<div>
    <h4>JobApplication Details  |   <a href="/JobApplications/Applications/@Model.JobId" class="btn btn-primary btn-sm">Back</a>    |   <a href="/Jobs/Details/@Model.JobId" class="btn btn-primary btn-sm">Back to Job Details</a></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Job.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Job.Position)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OtherNames)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OtherNames)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sex)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sex)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaritalStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaritalStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>

        <dd>
            @String.Format("{0:dd-MMM-yyyy}", Model.DateOfBirth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResumeUrl)
        </dt>

        <dd>
            <a href="~/Uploads/@Html.DisplayFor(model => model.ResumeUrl)" target="_blank">View Resume</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Qualification)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Qualification)
        </dd>

    </dl>
</div>
@if (Model.Answers.Count() > 0) { 
<h4>Questions and Answers   |   Time taken: @Model.AnsweredTime (sec)     </h4>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayName("Rank")
            </th>
            <th>
                @Html.DisplayName("Questions")
            </th>
            <th>
                @Html.DisplayName("Answer")
            </th>

        </tr>

        @foreach (var item in Model.Answers.OrderBy(a => a.Question.Rank))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.Rank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.QText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AText)
                </td>

            </tr>
        }

    </table>
    </div>
}